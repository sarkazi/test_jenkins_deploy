properties([disableConcurrentBuilds()])

pipeline {
  agent any

   triggers {
    pollSCM('*****')
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    timestamps()
  }

  stages {
    stage ('Crete docker image') {
      steps {
        echo "================= start building image ======================"
        dir ('docker/test') {
          sh ('docker build - < Dockerfile.dev')
        }
      }
    }
  }
}