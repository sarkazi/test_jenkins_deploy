pipeline {
  agent any

  stages {
    stage('DELETE WORKSPACE') {
      steps {
        echo "deleting workspace..."
        deleteDir()
      }
    }
    stage('PULLING FROM REPO') {
      steps {
        git branch: "dev",
        url: "https://github.com/sarkazi/test_jenkins_deploy.git"
      }
    }
    stage('BUILD DOCKER IMAGE') {
      steps {
        sh '''
          docker build --file Dockerfile.dev -t nikookin/wsa-server:0.2 .
        '''
      }
    }
    stage('PUSH DOCKER IMAGE TO DOCKER_HUB') {
      steps {
        withDockerRegistry(credentialsId: 'dockerhub-cred-nikookin', url: 'https://index.docker.io/v1/') {
          sh '''
            docker push nikookin/wsa-server:0.2
          '''
        }
        
      }
    }
    stage('DELETE DOCKER IMAGE LOCALLY') {
      steps {
        sh '''
          docker rmi nikookin/wsa-server:0.2
        '''
      }
    }
  }
}

  
